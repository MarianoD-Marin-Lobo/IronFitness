<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Afiliados_Carnet_Activity.Pantalla3Activity">
    <ImageView
        android:id="@+id/menu_pagos_image_rectangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_rectangle_gris" />
    <TextView
        android:id="@+id/text_pagos"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/carnets"
        android:includeFontPadding="false"
        android:text=""
        android:textColor="#FF000000"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_rectangle_gris" />

    <ImageView
        android:id="@+id/image_rectangle_gris"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_25_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/text_registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/registro"
        app:layout_constraintStart_toEndOf="@+id/image_back_button"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_back_button"
        android:layout_width="47dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:scaleType="centerInside"
        android:src="@drawable/vector_3"
        app:layout_constraintStart_toStartOf="@+id/image_rectangle_gris"
        app:layout_constraintTop_toTopOf="@+id/image_rectangle_gris" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="280dp"
        android:layout_height="25dp"
        android:layout_marginTop="220dp"
        android:fontFamily="sans-serif"
        android:background="@drawable/datos_carnet"
        android:text=" "
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



    <!-- FrameLayout con borde redondeado -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Label and Input for the first field -->
        <TextView
            android:id="@+id/label1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="N°/Id Socio"
            android:textColor="@android:color/black"
            android:padding="8dp"/>

        <EditText
            android:id="@+id/input1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="13579"
            android:textColor="@android:color/black"/>

        <!-- Label and Input for the second field -->
        <TextView
            android:id="@+id/label2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre/s"
            android:textColor="@android:color/black"
            android:padding="8dp"/>

        <EditText
            android:id="@+id/input2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Inserte su/s nombre/s"
            android:textColor="@android:color/black"/>

        <!-- Label and Input for the third field -->
        <TextView
            android:id="@+id/label3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apellido/s"
            android:textColor="@android:color/black"
            android:padding="8dp"/>

        <EditText
            android:id="@+id/input3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Inserte su Apellido/s"
            android:textColor="@android:color/black"/>

        <!-- Label and Input for the fourth field -->
        <TextView
            android:id="@+id/label4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="N° de carnet"
            android:textColor="@android:color/black"
            android:padding="8dp"/>

        <EditText
            android:id="@+id/input4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Inserte su N° de carnet"
            android:textColor="@android:color/black"/>

        <!-- Botones -->
        <LinearLayout
            android:id="@+id/buttonRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/input4"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/confirmar_cambios"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text=""
                android:textColor="@android:color/white"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/cancelar_cambios"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text=""
                android:textColor="@android:color/white"
                app:backgroundTint="@null" />

        </LinearLayout>

    </LinearLayout>




    <!-- Contenido debajo del FrameLayout -->

    <Button
        android:id="@+id/image_low_menu_quad"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/new_payment_4"
        android:scaleType="centerInside"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/image_low_menu_quad1"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.521" />

    <Button
        android:id="@+id/image_low_menu_quad1"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/icon_home"
        android:scaleType="centerInside"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/image_low_menu_quad2"
        app:layout_constraintStart_toEndOf="@+id/image_low_menu_quad" />

    <Button
        android:id="@+id/image_low_menu_quad2"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/icon_person"
        android:scaleType="centerInside"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_low_menu_quad1" />


</androidx.constraintlayout.widget.ConstraintLayout>