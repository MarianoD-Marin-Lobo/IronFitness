<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ver_datos_afiliados_activity.Datos_Afiliado_Ver">
    <ImageView
        android:id="@+id/menu_pagos_image_rectangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gente_fit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_rectangle_gris" />

    <TextView
        android:id="@+id/text_pagos"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="292dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/afiliados"
        android:includeFontPadding="false"
        android:text=""
        android:textColor="#FF000000"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_rectangle_gris" />

    <ImageView
        android:id="@+id/image_rectangle_gris"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_25_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/text_registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/registro"
        app:layout_constraintStart_toEndOf="@+id/image_back_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/image_back_button"
        android:layout_width="19dp"
        android:layout_height="25dp"
        app:backgroundTint="@null"
        android:layout_marginStart="16dp"
        android:layout_marginTop="29dp"
        android:scaleType="centerInside"
        android:background="@drawable/image_back_button"
        app:layout_constraintStart_toStartOf="@id/image_rectangle_gris"
        app:layout_constraintTop_toTopOf="@id/image_rectangle_gris" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="280dp"
        android:layout_height="25dp"
        android:layout_marginTop="220dp"
        android:fontFamily="sans-serif"
        android:background="@drawable/datos_afiliado"
        android:text=" "
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



    <!-- FrameLayout con borde redondeado -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Label and Input for the first field -->
          <TextView
            android:id="@+id/labelRol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rol"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="0dp"
            android:gravity="center"/>

        <!-- CheckBox: Socio -->
        <CheckBox
            android:id="@+id/checkSocio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Socio"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/labelRol"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- CheckBox: No Socio -->
        <CheckBox
            android:id="@+id/checkNoSocio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Socio"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/labelRol"
            app:layout_constraintStart_toEndOf="@+id/checkSocio"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/label3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apto Médico"
            android:padding="8dp"/>

        <EditText
            android:id="@+id/input3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="123456"/>

        <!-- Label and Input for the fourth field -->
        <TextView
            android:id="@+id/label4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de afiliación"
            android:padding="8dp"/>

        <EditText
            android:id="@+id/input4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="20/06/2024"/>
        <!-- Label and Input for the second field -->
        <TextView
            android:id="@+id/label2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre/s"
            android:padding="8dp"/>

        <EditText
            android:id="@+id/input2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Inserte su/s nombre/s"/>

        <!-- Label and Input for the third field -->

        <LinearLayout
            android:id="@+id/buttonRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/input4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">


            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/volver_afiliado_button"
                app:backgroundTint="@null"
                android:text="" />

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/borrar_afiliado_button"
                app:backgroundTint="@null"
                android:text="" />

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/editar_afiliado_button"
                app:backgroundTint="@null"
                android:text="" />



        </LinearLayout>
    </LinearLayout>



    <!-- Contenido debajo del FrameLayout -->

    <Button
        android:id="@+id/image_low_menu_quad"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/new_payment_4"
        android:scaleType="centerInside"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/image_low_menu_quad1"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.521" />

    <Button
        android:id="@+id/image_low_menu_quad1"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/icon_home"
        android:scaleType="centerInside"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/image_low_menu_quad2"
        app:layout_constraintStart_toEndOf="@+id/image_low_menu_quad" />

    <Button
        android:id="@+id/image_low_menu_quad2"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/icon_person"
        android:scaleType="centerInside"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_low_menu_quad1" />


</androidx.constraintlayout.widget.ConstraintLayout>