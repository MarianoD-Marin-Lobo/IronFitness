<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_rectangle_gris"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/image_rectangle_gris"
        android:elevation="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/image_back_button"
        android:layout_width="19dp"
        android:layout_height="25dp"
        app:backgroundTint="@null"
        android:layout_marginStart="16dp"
        android:layout_marginTop="29dp"
        android:scaleType="centerInside"
        android:background="@drawable/image_back_button"
        app:layout_constraintStart_toStartOf="@id/image_rectangle_gris"
        app:layout_constraintTop_toTopOf="@id/image_rectangle_gris" />

    <TextView
        android:id="@+id/text_registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/texto_ironhouse"
        android:elevation="2dp"
        app:layout_constraintStart_toEndOf="@id/image_back_button"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonAfiliado"
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:layout_marginStart="-15dp"
        android:layout_marginTop="-16dp"
        android:background="@null"
        android:scaleType="matrix"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_rectangle_gris"
        app:srcCompat="@drawable/imageafiliado" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="190dp"
        android:layout_height="39dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/texto_afiliado"
        app:layout_constraintEnd_toEndOf="@+id/imageButtonAfiliado"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/imageButtonAfiliado"
        app:layout_constraintTop_toTopOf="@id/imageButtonAfiliado" />

    <Button
        android:id="@+id/image_low_menu_quad"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/low_menu_quad"
        app:backgroundTint="@null"
        app:layout_constraintStart_toEndOf="@id/image_low_menu_quad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_vector" />



    <Button
        android:id="@+id/image_low_menu_quad1"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/low_menu_quad"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/image_low_menu_quad2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/image_low_menu_quad"
        app:layout_constraintTop_toBottomOf="@id/image_vector" />

    <Button
        android:id="@+id/image_low_menu_quad2"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/low_menu_quad"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/image_low_menu_quad1"
        app:layout_constraintTop_toBottomOf="@id/image_vector" />

    <ImageView
        android:id="@+id/image_vector"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginBottom="24dp"
        android:scaleType="centerInside"
        android:src="@drawable/image_vector"
        app:layout_constraintBottom_toTopOf="@+id/image_low_menu_quad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/image_icon_home"
        android:layout_width="49.17dp"
        android:layout_height="42dp"
        android:scaleType="centerInside"
        android:src="@drawable/image_icon_home"
        app:layout_constraintBottom_toBottomOf="@id/image_low_menu_quad2"
        app:layout_constraintEnd_toEndOf="@id/image_low_menu_quad2"
        app:layout_constraintStart_toStartOf="@id/image_low_menu_quad2"
        app:layout_constraintTop_toTopOf="@id/image_low_menu_quad2" />

    <ImageView
        android:id="@+id/image_icon_pago"
        android:layout_width="49.17dp"
        android:layout_height="42dp"
        android:scaleType="centerInside"
        android:src="@drawable/iconmoney"
        app:layout_constraintBottom_toBottomOf="@id/image_low_menu_quad"
        app:layout_constraintEnd_toEndOf="@id/image_low_menu_quad"
        app:layout_constraintStart_toStartOf="@id/image_low_menu_quad"
        app:layout_constraintTop_toTopOf="@id/image_low_menu_quad" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:text="Administrar Afiliados"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonAfiliado"
        tools:layout_editor_absoluteX="1dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="64dp"
        android:hint="Buscar por Nombre, Apellido รณ DNI..."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="52dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/lupa"
        app:layout_constraintBottom_toBottomOf="@+id/editText"
        app:layout_constraintEnd_toStartOf="@+id/editText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editText"
        tools:srcCompat="@tools:sample/avatars" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Todos" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Socios" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No-Socios" />
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/image_vector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>