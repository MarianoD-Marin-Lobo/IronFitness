<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBase">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/btn_siguiente"
        app:layout_constraintStart_toStartOf="@+id/btn_siguiente"
        tools:context=".Nuevo_Pago_Descargando_Comprob_Activity">

        <ImageView
            android:id="@+id/menu_pagos_image_rectangle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="47dp"
            android:background="@drawable/menu_pagos_image_rectangle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_rectangle_gris"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/image_rectangle_gris"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/image_back_button"
            android:layout_width="19dp"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="29dp"
            android:background="@drawable/image_back_button"
            android:scaleType="centerInside"
            app:backgroundTint="@null"
            app:layout_constraintStart_toStartOf="@id/image_rectangle_gris"
            app:layout_constraintTop_toTopOf="@id/image_rectangle_gris" />

        <Button
            android:id="@+id/image_low_menu_quad"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:background="@drawable/low_menu_quad"
            android:scaleType="centerInside"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/image_low_menu_quad1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_vector" />

        <Button
            android:id="@+id/image_low_menu_quad1"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:background="@drawable/low_menu_quad"
            android:scaleType="centerInside"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/image_low_menu_quad2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/image_low_menu_quad"
            app:layout_constraintTop_toBottomOf="@+id/image_vector"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/image_low_menu_quad2"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:background="@drawable/low_menu_quad"
            android:scaleType="centerInside"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/image_low_menu_quad1"
            app:layout_constraintTop_toBottomOf="@+id/image_vector" />

        <ImageView
            android:id="@+id/image_vector"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/image_vector"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nuevo_pago_container_descargando" />

        <TextView
            android:id="@+id/text_registro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/texto_ironhouse"
            app:layout_constraintStart_toEndOf="@+id/image_back_button"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_pagos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginTop="30dp"
            android:includeFontPadding="false"
            android:text="REGISTRO \n NUEVO PAGO"
            android:textColor="#FF000000"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_rectangle_gris" />

        <ImageView
            android:id="@+id/image_icon_person"
            android:layout_width="49.17dp"
            android:layout_height="42dp"
            android:scaleType="centerInside"
            android:src="@drawable/image_icon_person"
            app:layout_constraintBottom_toBottomOf="@id/image_low_menu_quad2"
            app:layout_constraintEnd_toEndOf="@id/image_low_menu_quad2"
            app:layout_constraintStart_toStartOf="@+id/image_low_menu_quad2"
            app:layout_constraintTop_toTopOf="@+id/image_low_menu_quad2" />

        <ImageView
            android:id="@+id/image_new_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/image_new_payment"
            app:layout_constraintBottom_toBottomOf="@+id/image_low_menu_quad"
            app:layout_constraintEnd_toEndOf="@+id/image_low_menu_quad"
            app:layout_constraintStart_toStartOf="@id/image_low_menu_quad"
            app:layout_constraintTop_toTopOf="@+id/image_low_menu_quad" />


        <ImageView
            android:id="@+id/image_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/image_icon_home"
            app:layout_constraintBottom_toBottomOf="@+id/image_low_menu_quad1"
            app:layout_constraintEnd_toEndOf="@+id/image_low_menu_quad1"
            app:layout_constraintStart_toStartOf="@id/image_low_menu_quad1"
            app:layout_constraintTop_toTopOf="@+id/image_low_menu_quad1" />


        <ImageView
            android:id="@+id/detalleNuevoPago_container"
            android:layout_width="320dp"
            android:layout_height="375dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/container1"
            android:elevation="1dp"
            android:scaleType="centerInside"
            android:translationZ="3dp"
            app:layout_constraintStart_toStartOf="@+id/nuevo_pago_container_descargando"
            app:layout_constraintTop_toBottomOf="@+id/txt_detallePago" />

        <ImageView
            android:id="@+id/nuevo_pago_container_descargando"
            android:layout_width="340dp"
            android:layout_height="500dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/container1"
            android:elevation="0dp"
            android:scaleType="centerInside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menu_pagos_image_rectangle" />

        <Button
            android:id="@+id/btn_generar_PDF"
            android:layout_width="340dp"
            android:layout_height="65dp"
            android:layout_gravity="top|left"
            android:background="@drawable/nuevo_pago_pag1_container_rectangle2"
            android:scaleType="centerInside"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="@+id/nuevo_pago_container_descargando"
            app:layout_constraintStart_toStartOf="@+id/nuevo_pago_container_descargando" />


        <TextView
            android:id="@+id/text_btn_volver_menu"
            android:layout_width="154dp"
            android:layout_height="48dp"
            android:layout_marginStart="41dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="46dp"
            android:text="DESCARGAR  COMPROBANTE"
            android:textAlignment="center"
            android:textColor="#FFFDFDFD"
            android:textSize="18sp"
            android:textStyle="bold"
            android:translationZ="5dp"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toStartOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/btn_generar_PDF"
            app:layout_constraintTop_toTopOf="@+id/btn_generar_PDF" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="460dp" />

        <TextView
            android:id="@+id/txt_detallePago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="84dp"
            android:layout_marginTop="12dp"
            android:elevation="1dp"
            android:text="DETALLE  DEL  PAGO"
            android:textColor="#FF656363"
            android:textSize="18dp"
            android:textStyle="bold"
            android:translationZ="3dp"
            app:layout_constraintStart_toStartOf="@+id/nuevo_pago_container_descargando"
            app:layout_constraintTop_toTopOf="@+id/nuevo_pago_container_descargando" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="62dp"
            android:translationZ="2dp"
            app:layout_constraintEnd_toEndOf="@+id/nuevo_pago_container_descargando"
            app:layout_constraintTop_toTopOf="@+id/btn_generar_PDF"
            app:srcCompat="@drawable/icono_descarga3" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tblLyt_detallePago"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:translationZ="5dp"
            app:layout_constraintStart_toStartOf="@+id/detalleNuevoPago_container"
            app:layout_constraintTop_toTopOf="@+id/detalleNuevoPago_container">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monday" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tuesday" />

        </com.google.android.material.tabs.TabLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>




